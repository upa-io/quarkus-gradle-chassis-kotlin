{
	"name":"Java 21 - Kotlin",
	"image":"mcr.microsoft.com/devcontainers/java:1-21-bullseye",
	"features":{
	   "ghcr.io/devcontainers/features/java:1":{
		  "version":"21",
		  "installMaven":"false",
		  "installGradle":"true",
		  "gradleVersion":"8.8"
	   }
	},
	"customizations":{
	   "vscode":{
		  "settings":{
		  },
		  "extensions":[
			 "streetsidesoftware.code-spell-checker",
			 "adpyke.codesnap",
			 "rangav.vscode-thunder-client",
			 "fwcd.kotlin"
		  ]
	   }
	},
	"forwardPorts":[
	   8080
	],
	"postCreateCommand":"java -version"
 }
